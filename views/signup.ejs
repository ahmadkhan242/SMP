<% include header %>
<div class="mdl-layout mdl-js-layout mdl-color--grey-100" style="width:100%;">
<main class="mdl-layout__content">
  <div class="mdl-card mdl-shadow--6dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h2 class="mdl-card__title-text">Register Here</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <form action="/register" method="post">
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="nameu" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Full Name</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="username" id="username" />
          <label class="mdl-textfield__label" for="username">Username</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="password" name="password" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Password</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="departmentu" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Department</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="number" name="yearu" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Year</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="number" name="phonenumberu" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Phone Number</label>
        </div>
        <!-- <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="dobu" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Date of Birth</label>
        </div> -->
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="number" name="rollnou" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Roll Number</label>
        </div>
        <div class="mdl-textfield mdl-js-textfield">
          <input class="mdl-textfield__input" type="text" name="imageu" id="userpass" />
          <label class="mdl-textfield__label" for="userpass">Profile photo</label>
        </div>
    <div class="mdl-card__actions mdl-card--border">
      <button class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">SignUp</button>
    </div>
    </form>
      </div>
  </div>
</main>
</div>
<% include footer %>
